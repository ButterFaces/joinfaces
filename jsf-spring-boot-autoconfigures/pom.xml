<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.joinfaces</groupId>
        <artifactId>jsf-spring-boot-parent</artifactId>
        <version>2.1.2-SNAPSHOT</version>
        <relativePath>../jsf-spring-boot-parent</relativePath>
    </parent>

    <artifactId>jsf-spring-boot-autoconfigures</artifactId>
    <packaging>pom</packaging>
    <name>JSF Spring Boot AutoConfigures</name>
    <description>Group of all JSF Spring Boot AutoConfigures</description>

    <properties>
        <main.basedir>${basedir}/..</main.basedir>
        
        <check.dir>../../jsf-spring-boot-parent/src/checkconfig</check.dir>
        <checkstyle.dir>../jsf-spring-boot-parent/src/checkconfig/checkstyle</checkstyle.dir>        
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <optional>true</optional>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-configuration-processor</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <optional>true</optional>
        </dependency>
    </dependencies>
        
    <modules>
        <module>jsf-spring-boot-autoconfigure</module>
        <module>jsf-mojarra-spring-boot-autoconfigure</module>
        <module>jsf-myfaces-spring-boot-autoconfigure</module>
        <module>jsf-omnifaces-spring-boot-autoconfigure</module>
        <module>jsf-primefaces-spring-boot-autoconfigure</module>
        <module>jsf-bootsfaces-spring-boot-autoconfigure</module>
        <module>jsf-angularfaces-spring-boot-autoconfigure</module>
        <module>jsf-butterfaces-spring-boot-autoconfigure</module>
        <module>jsf-jetty-spring-boot-autoconfigure</module>
        <module>jsf-jetty-myfaces-spring-boot-autoconfigure</module>
        <module>jsf-undertow-spring-boot-autoconfigure</module>
        <module>jsf-undertow-myfaces-spring-boot-autoconfigure</module>
    </modules>
</project>
